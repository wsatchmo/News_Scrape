<div id="articles" style="width: 45%">
        <div class="card" style="width: 100%;">
            {{#if article.image}}
                <img src="{{article.image}}" style="width: 100%; height: 100%">
            {{/if}}
            {{#if article.video}}
                <iframe class="video-box"  src="{{article.video}}" style="width: 100%; height: 100%"></iframe>
            {{/if}}
            <div class="card-body">
                <h5 class="card-title"></h5>
                <p class="card-text">{{article.title}}</p>
                <a href="{{article.link}}" target="_blank" class="btn btn-warning inline-btn">Original Article</a>
            </div>
        </div>
</div>

<div class="comments" style="width: 45%; float: left;">
    <div class="card">  
    {{#each article.comment}}
        <div class="comment-body">  
            <p class="text-center" style="padding: 10px; margin-bottom: 2px">{{this}}</p>
        </div>
        <div class="text-center">
            <button class="btn btn-danger comment-action">Delete Comment</button>
        </div>
        <hr>
    {{/each}}
     
        
    {{!-- Allow user to leave comments  --}}
    
        <form>
            <div class="form-group">
                <div class="card-body">
                    <label class="mdl-textfield__label" for="comment-input">Add a comment</label>
                    <input class="form-control comment-input" type="text">
                </div>
                <button class="btn btn-primary addComment float-right" data-id="{{article._id}}">Add Comment</button>
            </div>
        </form>
    </div>

</div>